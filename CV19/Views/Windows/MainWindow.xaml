<Window x:Class="CV19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:cmd="clr-namespace:CV19.Infrastructure.Commands"
        xmlns:view="clr-namespace:CV19.Views"
        xmlns:components="clr-namespace:CV19.Components"
        xmlns:converters="clr-namespace:CV19.Infrastructure.Converters"
        DataContext="{Binding MainWindowModel, Source={StaticResource Locator}}"
        mc:Ignorable="d"
        Title="{Binding Title}"
        Height="697.169" Width="978.302">

    <Window.InputBindings>
        <KeyBinding
            Modifiers="Control" Key="Q" Command="{Binding CloseAppApplicationCommand}" />
    </Window.InputBindings>
    <Window.Resources>
        <cmd:CloseApplicationCommand x:Key="CloseApplicationCommand" />
    </Window.Resources>

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <!--<MenuItem Header="Выход"
                          Command="{Binding CloseAppApplicationCommand}" />-->
                <MenuItem Header="Выход" Command="{StaticResource CloseApplicationCommand}" />
            </MenuItem>
            <MenuItem Header="Помощь">
                <MenuItem Header="О программе" />
            </MenuItem>
            <MenuItem Command="{Binding ChangeTabItem}" CommandParameter="-1">
                <MenuItem.Header>
                    <fa:ImageAwesome Icon="Regular_ArrowAltCircleRight" Height="12" />
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Command="{Binding ChangeTabItem}" CommandParameter="1">
                <MenuItem.Header>
                    <fa:ImageAwesome Icon="Regular_ArrowAltCircleLeft" Height="12" />
                </MenuItem.Header>
            </MenuItem>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock Text="{Binding SelectedTabPage}" />
            </StatusBarItem>
            <StatusBarItem>
                <ProgressBar Width="120" Height="14" Value="30" />
            </StatusBarItem>
        </StatusBar>
        <TabControl>
            <TabItem Header="Статистика">
                <view:CountriesStatisticView DataContext="{Binding CountriesStatistic}" />
            </TabItem>
            <TabItem Header="Отладка">
                <!-- <TextBox Text="{x:Static system:Environment.CurrentDirectory}" /> -->
                <Grid>
                    <Grid.Resources>
                        <converters:ParametricMultipleValueConverter x:Key="ConverterCoefficient" Value="{Binding Coefficient}" />
                    </Grid.Resources>
                    <components:GaugeIndicator Width="80" Height="80"
                                               VerticalAlignment="Top" HorizontalAlignment="Left">
                        <components:GaugeIndicator.Value>
                            <Binding Path="FuelCount"
                                     Converter="{StaticResource ConverterCoefficient}" />
                        </components:GaugeIndicator.Value>
                    </components:GaugeIndicator>
                    <Slider HorizontalAlignment="Stretch" VerticalAlignment="Top"
                            Minimum="0" Maximum="100"
                            Height="30" Margin="90,20,-1,0"
                            ToolTip="{Binding FuelCount}"
                            Value="{Binding FuelCount}" />
                    <Slider HorizontalAlignment="Stretch" VerticalAlignment="Top"
                            Minimum="-10" Maximum="10" SmallChange="0.1"
                            Height="30" Margin="90,40,-1,0"
                            ToolTip="{Binding Coefficient}"
                            Value="{Binding Coefficient}" />
                </Grid>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>